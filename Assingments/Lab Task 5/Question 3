#include<stdio.h>
int main(){
    char ct,size;
    float bt;
    printf("Input w for white and B for black\n");    
    printf("Enter Coffee Type:");
    scanf("%c",&ct);
    printf("\nInput 's' for small\n 'm' for medium \n 'l' for large ");
    printf("\nEnter Size:");
    scanf(" %c",&size);
    bt=10;
    if (((ct=='W'||ct=='w')||(ct=='b'|| ct=='B'))&& (size=='s'||size=='S'||size=='m'|| size=='M'|| size=='l'|| size=='L')){
        if((ct=='W')||ct=='w'){
            printf("\nWhite Coffee\n");
            printf("Description:\n");
            if(size=='s'||size=='S'){
                printf("236 ml\n"); 
            }
            else if(size=='m'||size=='M'){
                bt+=bt*.15;
                printf("355 ml\n");
            }
            else if(size=='l'||size=='L'){
                bt+=bt*25;
                printf("475 ml\n");
            }
        printf("Brew time:%.1f min",bt);
        printf("\nIngredents:\n1.Water\n2.Coffee Grounds\n3.Creamer\n4.Sugar");
        }
    else if (ct=='b'|| ct=='B'){
        if((ct=='b')||ct=='B'){
            printf("\nBlack Coffee\n");
            printf("Description:\n");
            if(size=='s'||size=='S'){
                printf("236 ml\n"); 
            }
            else if(size=='m'||size=='M'){
                bt+=bt*.15;
                printf("355 ml\n");
            }
            else if(size=='l'||size=='L'){
                bt+=bt*25;
                printf("475 ml\n");
            }
        printf("Brew time:%.1f min",bt);
        printf("\nIngredents:\n1.Water\n2.Coffee Grounds\n3.Suger");
        }
    }
    }
else printf("\nInvalid Input"); //Kia kar rahe ho bhai
}

    
